		font-style: italic;
		color: #00529e;
	}

	.ident {
		margin-top: 10px;
		color: #00529e;
		font-size: 10pt;
	}

	.ident,
	.ident .col-1,
	.ident .col-2 {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
	}

	.col-1,
	.preference {
		width: 60%;
	}

	.col-2,
	.material {
		width: 40%;
	}

	.ident_prat {
		width: 40%;
		background-color: #e0e6f4;
		padding: 4px;
	}

	.textarea {
		margin-top: 4px;
		border: 1px solid white;
		background-color: #d3dcfb;
		color: black;
	}

	.ident_dev {
		width: 60%;
		padding: 0 10px;
		font-weight: bold;
		font-size: 11pt;
	}

	.ident_dev .form {
		background-color: #c6cfe9;
		padding: 4px;
		margin-bottom: 4px;
		font-size: 12px;
	}

	.ident_dev .form div {
		padding: 2px 0;
	}

	.input {
		font-weight: normal;
		background-color: #d3dcfb;
		border: 1px solid white;
		display: inline-block;
		color: black;
		font-style: normal;
	}
	.donnees_admin {
		background-color: #e7e7e8;
		font-weight: bold;
		width: 100%;
		margin-right: 10px;
		font-size: 12px;
		padding: 4px;
	}

	.donnees_admin .title {
		font-style: italic;
		font-size: 12px;
		color: #00529e;
	}

	.donnees_admin h2 {
		text-align: center;
		width: 100%;
		font-weight: normal;
		padding: 10px 0;
	}

	.donnees_admin .info {
		color: black;
		font-size: 10pt;
		display: flex;
		flex-wrap: wrap;
		align-items: end;
		padding: 2px 0;
	}

	.donnees_admin .info .dot {
		border-bottom: 1px dotted gray;
	}

	.dispo {
		display: flex;
		flex-wrap: wrap;
		margin-top: 4px;
		color: black;
	}

	span.select {
		padding: 0 0 0 10px;
	}

	span.select::before {
		content: '\25CB';
		font-size: 14pt;
		line-height: 9pt;
		padding: 0;
		margin-right: 4px;
	}
	span.selected::before {
		content: '\25CF';
		color: #565964;
	}

	input[type='checkbox'] + label {
		display: block;
		cursor: pointer;
		padding: 0.2em;
	}

	input[type='checkbox'] {
		display: none;
	}

	input[type='checkbox'] + label:before {
		content: '\2751';
		font-size: 10px;
		background: #e0e6fc;
		display: inline-block;
		padding: 2px;
		margin-right: 4px;
		vertical-align: bottom;
		transition: 0.2s;
		color: black;
	}

	input[type='checkbox']:checked + label:before {
		content: '\25FC';
		color: #565964;
		padding-top: 0;
	}

	.preference {
		padding: 5px;
	}
	.preference,
	.material {
		border: 1px solid gray;
		color: black;
	}

	.preference .title {
		font-style: italic;
		font-size: 10pt;
		margin-bottom: 5px;
	}

