<head>

  <style>
    @page { margin: 5mm 5mm 5mm; padding: 0; } body { font-family: Arial;
    font-size: 12px; } #header { color: #aaaaaa; } #header { top: -10mm;
    margin-bottom: 5mm;} table { width: 100%; border-collapse: collapse; } table
    th, table td { padding: 2mm; border: 0.1pt solid #000000; white-space:
    nowrap; } table th.columnUser, table td.columnUser { width: 6%; text-align:
    center; } table th.columnDate, table td.columnDate { width: 20%; text-align:
    center; } table th.columnPatient, table td.columnPatient { width: 38%; }
    table th.columnName, table td.columnName { width: 36%; }

  </style>
</head>
<body>
  <div id='header'>
    {{#if (eq view 'day')}}
      <strong>Planning du {{start}}</strong>
    {{else}}
      <p>Planning du {{start}} au {{end}}</p>
    {{/if}}
  </div>

  <table class='events'>
    <thead>
      <tr>
        <th class='columnUser'>P</th>
        <th class='columnDate'>Date</th>
        <th class='columnPatient'>Patient</th>
        <th class='columnName'>Observation</th>
      </tr>
    </thead>
    <tbody>
      {{#if pbw}}
        {{#each events}}
          <tr>
            <td class='columnUser'>{{this.doctorShortname}}</td>
            <td class='columnDate'>{{#if this.patientId}}
                {{this.number}}
                -
                {{this.lastName}}
                {{this.firstName}}
              {{/if}}</td>
            <td class='columnPatient'>
              {{#if this.patientId}}
                {{this.number}}
                {{this.lastName}}
                {{this.firstName}}<br />
              {{/if}}

              <strong>{{this.title}}</strong>

            </td>
            <td class='columnName'></td>
          </tr>
        {{/each}}
      {{else}}
        {{#each events}}
          <tr>
            <td class='columnUser'>{{this.doctorShortname}}</td>
            <td class='columnDate'>{{#if this.patientId}}
                {{this.number}}
                -
                {{this.lastName}}
                {{this.firstName}}
              {{/if}}</td>
            <td class='columnPatient'>
              {{#if this.patientId}}
                {{this.number}}
                {{this.lastName}}
                {{this.firstName}}<br />
              {{/if}}

              <strong
                style='color: {{this.color.background}}'
              >{{this.title}}</strong>

            </td>
            <td class='columnName'></td>
          </tr>
        {{/each}}
      {{/if}}
    </tbody>
  </table>
</body>